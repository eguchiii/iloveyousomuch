    <!-- YES (heart) -->
    <button class="btn-heart" id="yesBtn" aria-label="Yes">
      <!-- Heart SVG: white fill with merlot stroke -->
      <svg viewBox="0 0 100 90" aria-hidden="true" focusable="false">
        <path d="M50 80
                 C 20 55, 0 35, 20 20
                 C 35 7, 50 15, 50 25
                 C 50 15, 65 7, 80 20
                 C 100 35, 80 55, 50 80 Z"
              fill="#ffffff" stroke="#800020" stroke-width="3" />
      </svg>
      <span>YES</span>
    </button>

  <!-- Success dialog -->
  <div class="overlay" id="overlay" role="dialog" aria-modal="true" aria-labelledby="yayTitle">
    <div class="box">
      <h2 id="yayTitle">Yay! üå∑</h2>
      <p id="yayMsg">You just made my day. See you on February 14th? üåπ</p>
    </div>
  </div>

  <!-- Error toast -->
  <div class="toast" id="toast" role="status" aria-live="assertive">Error: ‚ÄúNo‚Äù is unavailable. Please try ‚ÄúYes‚Äù. üòâ</div>

  <script>
    // ====== Customize here ======
    const PERSON_NAME  = "Daphne";
    const SUCCESS_LINE = "Yay! üå∑";
    const MESSAGE_LINE = "You just made my day. See you on February 14th? üåπ";
    // ============================

    // Insert texts
    document.getElementById('name').textContent = PERSON_NAME;
    document.getElementById('yayTitle').textContent = SUCCESS_LINE;
    document.getElementById('yayMsg').textContent = MESSAGE_LINE;

    // Elements
    const playArea = document.getElementById('play-area');
    const noBtn = document.getElementById('noBtn');
    const yesBtn = document.getElementById('yesBtn');
    const overlay = document.getElementById('overlay');
    const toast = document.getElementById('toast');

    // Move "No" away from the "Yes" button and keep inside viewport
    function moveNoButton() {
      const pad = 10;
      const vw = window.innerWidth;
      const vh = window.innerHeight;
      const yesRect = yesBtn.getBoundingClientRect();
      const noRect = noBtn.getBoundingClientRect();
      const bw = noRect.width;
      const bh = noRect.height;

      let x, y, tries = 0, maxTries = 40;

      do {
        x = Math.random() * (vw - bw - pad * 2) + pad;
        y = Math.random() * (vh - bh - pad * 2) + pad;

        const overlapX = Math.max(0, Math.min(x + bw, yesRect.right) - Math.max(x, yesRect.left));
        const overlapY = Math.max(0, Math.min(y + bh, yesRect.bottom) - Math.max(y, yesRect.top));
        var overlapsYes = overlapX * overlapY > 0;

        tries++;
      } while (overlapsYes && tries < maxTries);

      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
    }

    // Runaway behavior
    noBtn.addEventListener('mouseover', moveNoButton);
    noBtn.addEventListener('mousedown', moveNoButton);
    noBtn.addEventListener('touchstart', (e) => {
      e.preventDefault();
      moveNoButton();
    }, { passive: false });

    // Clicking "No" ‚Üí show error toast
    noBtn.addEventListener('click', () => {
      showToast();
    });

    function showToast() {
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 1800);
      if (navigator.vibrate) navigator.vibrate(40);
    }

    // Initial placement
    setTimeout(moveNoButton, 120);

    // Resize safety
    window.addEventListener('resize', () => {
      clearTimeout(window._rsz);
      window._rsz = setTimeout(moveNoButton, 120);
    });

    // YES ‚Üí overlay + flower confetti
    yesBtn.addEventListener('click', () => {
      overlay.classList.add('show');
      flowerBurst();
      setTimeout(flowerBurst, 250);
      setTimeout(flowerBurst, 700);
    });

    // Flower confetti (emojis)
    function flowerBurst() {
      const emojis = ['üå∏','üå∑','üåπ','üåº','üíê','üå∫'];
      const count = 80;
      for (let i = 0; i < count; i++) {
        const e = document.createElement('div');
        e.className = 'flower';
        e.textContent = emojis[Math.floor(Math.random() * emojis.length)];
        e.style.left = Math.random() * 100 + 'vw';
        e.style.fontSize = (14 + Math.random() * 24) + 'px';
        e.style.animationDuration = (1.7 + Math.random() * 2.2) + 's';
        e.style.transform = `rotate(${Math.random() * 360}deg)`;
        document.body.appendChild(e);
        setTimeout(() => e.remove(), 4200);
      }
    }
  </script>
</body>
